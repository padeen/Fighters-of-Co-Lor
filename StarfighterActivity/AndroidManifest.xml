<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.proandroidgames"
      android:versionCode="1"
      android:versionName="1.0">
    <uses-sdk android:minSdkVersion="10" />

    <application android:icon="@drawable/icon" android:label="@string/app_name">
        <activity android:name="com.proandroidgames.StarfighterActivity"
                  android:label="@string/app_name" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity android:name="com.proandroidgames.SFMainMenu" android:screenOrientation="portrait"></activity>
        <service android:name="com.proandroidgames.SFMusic"></service>
        <activity android:name="com.proandroidgames.SFGame" android:screenOrientation="portrait"></activity>
        
        <activity android:name="com.proandroidgames.Menu" android:label="@string/app_name">
			<intent-filter>
				<action android:name="com.proandroidgames.StarFighterActivity.CLEARSCREEN" />
				<category android:name="android.intent.category.DEFAULT" />
			</intent-filter>
		</activity>
		
        <activity android:name="com.proandroidgames.serverActivity" android:label="@string/app_name">
			<intent-filter>
				<action android:name="com.proandroidgames.StarFighterActivity.CLEARSCREEN" />
				<category android:name="android.intent.category.DEFAULT" />
			</intent-filter>
		</activity>
		
		<activity android:name="com.proandroidgames.clientActivity" android:label="@string/app_name">
			<intent-filter>
				<action android:name="com.proandroidgames.StarFighterActivity.CLEARSCREEN" />
				<category android:name="android.intent.category.DEFAULT" />
			</intent-filter>
		</activity>

    </application>
</manifest>